<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    tools:context="com.boostcamp.eunjilee.innerbeauty.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_title_image"
        android:contentDescription="@string/cd_login_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_login_kakao"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/login_btn_selector"
        android:backgroundTint="@color/colorKakao"
        android:drawableTop="@drawable/share_btn_facebook"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/btn_login_naver"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/login_btn_selector"
        android:backgroundTint="@color/colorNaver"
        android:drawableTop="@drawable/share_btn_facebook"
        android:layout_above="@+id/btn_login_kakao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/btn_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/login_btn_selector"
        android:backgroundTint="@color/colorFacebook"
        android:drawableTop="@drawable/share_btn_facebook"
        android:layout_above="@+id/btn_login_naver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        tools:targetApi="lollipop" />

</RelativeLayout>
